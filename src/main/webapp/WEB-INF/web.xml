<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.user.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login-form</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.user.SignUpController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/registration-form</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/addCinema</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VerificationController</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.user.VerificationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificationController</servlet-name>
        <url-pattern>/verification</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cinema</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.cinema.CinemaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cinema</servlet-name>
        <url-pattern>/cinema</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>edit</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.cinema.EditCinemaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.cinema.DeleteCinemaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.cinema.AddCinemaContoller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ScreenController</servlet-name>
        <servlet-class>com.example.moviebooking2.screen.ScreenController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ScreenController</servlet-name>
        <url-pattern>/screen-management</url-pattern>
    </servlet-mapping>
<!--call screencontroller again-->
    <servlet-mapping>
        <servlet-name>ScreenController</servlet-name>
        <url-pattern>/screencontrol</url-pattern>
    </servlet-mapping>
<servlet>
    <servlet-name>EditScreenController</servlet-name>
    <servlet-class>com.example.moviebooking2.screen.EditScreenController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>EditScreenController</servlet-name>
        <url-pattern>/edit-screen</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteScreenController</servlet-name>
        <servlet-class>com.example.moviebooking2.screen.DeleteScreenController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteScreenController</servlet-name>
        <url-pattern>/delete-screen</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddScreenController</servlet-name>
        <servlet-class>com.example.moviebooking2.screen.AddScreenController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddScreenController</servlet-name>
        <url-pattern>/add-screen</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MovieController</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.movie.MovieController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MovieController</servlet-name>
        <url-pattern>/movie-management</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditMovieController</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.movie.EditMovieController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditMovieController</servlet-name>
        <url-pattern>/edit-movie</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteMovieController</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.movie.DeleteMovieController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteMovieController</servlet-name>
        <url-pattern>/delete-movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditMovieController</servlet-name>
        <url-pattern>/moviecontroll</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddMovieController</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.movie.AddMovieController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddMovieController</servlet-name>
        <url-pattern>/add-movie</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ScreenLayout</servlet-name>
        <servlet-class>com.example.moviebooking2.controller.screenlayout.ScreenLayout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ScreenLayout</servlet-name>
        <url-pattern>/screen-layout</url-pattern>
    </servlet-mapping>
</web-app>